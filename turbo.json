{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**"]
    },
    "web#build": {
      "env": [
        "VITE_WC_PROJECT_ID",
        "VITE_ALCHEMY_ID",
        "VITE_POLYGONSCAN_API_KEY",
        "VITE_OPTIMISMSCAN_API_KEY",
        "VITE_BASESCAN_API_KEY",
        "VITE_ETHERSCAN_API_KEY",
        "VITE_WEB3_STORAGE_TOKEN",
        "VITE_TENDERLY_ACCESS_KEY"
      ],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
